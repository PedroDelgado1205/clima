<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#F9A825">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cuidades"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="40sp"
        android:gravity="center"
        android:textColor="#283593"
        android:background="#6FAD1457"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center">
        <Button
            android:id="@+id/btnCuenca"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cuenca"
            android:backgroundTint="#C62828"></Button>
        <Button
            android:id="@+id/btnAzoges"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Azoges"
            android:backgroundTint="#2E7D32"></Button>
        <Button
            android:id="@+id/btnGuayaquil"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Guayaquil"
            android:backgroundTint="#0277BD"></Button>
        <Button
            android:id="@+id/btnQuito"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Quito"
            android:backgroundTint="#283593"></Button>
        <Button
            android:id="@+id/btnRiobamba"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Riobamba"
            android:backgroundTint="#D84315"></Button>
    </LinearLayout>
</FrameLayout>